<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Novo Banner</h2>
                {{>_msg}}
            </div>
            <a href="/list-carouselHome">
                <div class="p-2">
                    <button class="btn btn-outline-primary ">
                        Listar
                    </button>
                </div>
            </a>
        </div>
        <hr>
        <form action="/posts/create-post" method="POST" enctype="multipart/form-data">

            <div class="form-group col-md-6">
                <label><span class="text-danger">*</span>Título</label>
                <input name="title" type="text" class="form-control" id="title" placeholder="Título">
            </div>
            <div class="form-group col-md-6">
                <label><span class="text-danger">*</span>Link</label>
                <input name="link" type="text" class="form-control" id="title" placeholder="Link de redirecionamento">
            </div>



            <div class="input-group col-md-6 mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                </div>
                <div class="custom-file">
                    <input type="file" accept="image/*" name="image">
                    {{!-- <label class="custom-file-label" for="inputGroupFile01">Choose file</label> --}}
                </div>
            </div>
            <p>
                <span class="text-danger">* </span>Campo obrigatório
            </p>
            <button type="submit" class="btn btn-success">Cadastrar</button>
        </form>
    </div>
</div>
</div>