<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Novo Post</h2>
                {{>_msg}}
                {{>_errors}}
            </div>
            <a href="/posts/list-posts">
                <div class="p-2">
                    <button class="btn btn-outline-primary ">
                        Listar
                    </button>
                </div>
            </a>
        </div>
        <hr>
        <form action="/posts/create-post" method="POST" enctype="multipart/form-data">

            <div class="form-group col-md-6">
                <label><span class="text-danger">*</span> Título</label>
                <input name="title" type="text" class="form-control" id="title" placeholder="Título da postagem">
            </div>
            <div class="form-group col-md-6">
                <label><span class="text-danger">*</span>Breve resumo</label>
                <textarea name="description" class="form-control" 
                    placeholder="resumo da publicação"></textarea>
            </div>
            <div class="form-group col-md-6">
                <label><span class="text-danger">*</span>Conteúdo</label>
                <textarea name="content" class="form-control" 
                    placeholder="Conteúdo da publicação"></textarea>
            </div>

            <div class="input-group col-md-6 mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                </div>
                <div class="custom-file">
                    <input type="file" accept="images/*" name="images" multiple>
                    {{!-- <label class="custom-file-label" for="inputGroupFile01">Choose file</label> --}}
                </div>






            </div>

            <div class="input-group col-md-6 mb-3">
                <label><span class="text-danger">*</span>Categoria </label>
                <select name="categoria" id="" class="browser-default custom-select">

                    {{#each categorias}}

                    <option value="{{_id}}">{{title}}</option>
                    {{else}}
                    <option value="0">Nenhum categoria registrada</option>
                    {{/each}}
                </select>
            </div>

            <p>
                <span class="text-danger">* </span>Campo obrigatório
            </p>
            <button type="submit" class="btn btn-success">Cadastrar</button>
        </form>
    </div>
</div>
</div>