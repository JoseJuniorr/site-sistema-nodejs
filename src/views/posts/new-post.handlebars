<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Novo Post</h2>
                {{>_msg}}
            </div>
            <a href="/posts/list">
                <div class="p-2">
                    <button class="btn btn-outline-primary ">
                        Listar
                    </button>
                </div>
            </a>
        </div>
        <hr>
        <form action="/posts/create-post" method="POST">

            <div class="form-group col-md-6">
                <label><span class="text-danger">*</span> Título</label>
                <input name="title" type="text" class="form-control" id="title" placeholder="Título da postagem">
            </div>
            <div class="form-group col-md-6">
                <label><span class="text-danger">*</span> Descrição</label>
                <textarea name="description" class="form-control" id="description"
                    placeholder="Conteúdo da publicação"></textarea>
            </div>

            <div class="input-group col-md-6">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="inputGroupFile04"
                        aria-describedby="inputGroupFileAddon04">
                    <label class="custom-file-label" for="inputGroupFile04">Escolher arquivo</label>
                </div>

            </div>



            <p>
                <span class="text-danger">* </span>Campo obrigatório
            </p>
            <button type="submit" class="btn btn-success">Cadastrar</button>
        </form>
    </div>
</div>
</div>