<div class="p-4">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Título</th>
                <th scope="col">CreatedAt</th>
                <th scope="col">UpdatedAt</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>

                <th scope="row">{{_id}}</th>
                <td>{{title}}</td>
                <td>{{createdAt}}</td>
                <td>{{updatedAt}}</td>
                <td>
                    <button class="btn btn-outline-primary">Editar</button>
                    <button class="btn btn-outline-danger">Excluir</button>
                </td>

            </tr>
            {{/each}}
        </tbody>
    </table>
</div>