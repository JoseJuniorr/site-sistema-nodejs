{{!-- {{#each posts}}
<h1>{{title}}</h1>
{{/each}} --}}
<div class="p-4 mb-4">
    <a href="/posts/new-post"><button class="btn btn-primary mb-4 "> Novo Post</button></a>
    {{>_msg}}
    <table class="table">

        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Título</th>

                <th scope="col">Atualizado em</th>
                <th scope="col">Ações</th>

            </tr>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{title}}</td>
                <td>{{updatedAt}}</td>
                <td>
                    <a href="/posts/post/{{id}}"><button class="btn btn-outline-primary">Editar</button></a>
                </td>
                <td> <button type="submit" class="btn btn-outline-danger" data-toggle="modal"
                        data-target="#delete-post">Excluir</button>
                </td>

            </tr>
        </tbody>
        <div class="modal fade" id="delete-post" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Deletar Publicação</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Tem certeza que deseja deletar esta publicação?
                    </div>
                    <div class="modal-footer">
                        <form action="/posts/post/{{_id}}?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-outline-danger ">Excluir</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <h4>Não há notas para exibir!</h4>
        {{/each}}
    </table>




</div>