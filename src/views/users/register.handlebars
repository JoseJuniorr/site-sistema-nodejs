<form class="form-login text-center" action="/users/register" method="POST">
    {{!-- <img class="mb-4" src="" alt="Celke" width="72" height="72"> --}}
    <h1 class="h3 mb-3 font-weight-normal">Cadastre-se</h1>

    <div class="form-group">
        <label>Nome</label>
        <input type="text" name="name" class="form-control" placeholder="Digite seu nome">
        <label>Email</label>
        <input type="text" name="email" class="form-control" placeholder="Digite seu melhor e-mail">
    </div>
    <div class="form-group">
        <label>Senha</label>
        <input type="password" name="password" class="form-control" placeholder="Digite a senha">
        <label>Confirme a senha</label>
        <input type="password" name="confirm_password" class="form-control" placeholder="Confirme sua senha">
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Salvar</button>

</form>