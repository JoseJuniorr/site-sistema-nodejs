<form action="/users/login" class="form-login text-center" method="POST">
    <img class="mb-4" src="" alt="logo" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Área Restrita</h1>
    <div class="form-group">
        <label>Usuário</label>
        <input type="text" name="email" class="form-control" placeholder="Digite o usuário">
    </div>
    <div class="form-group">
        <label>Senha</label>
        <input type="password" name="password" class="form-control" placeholder="Digite a senha">
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Acessar</button>
    <p class="text-center">Esqueceu a senha?</p>
</form>